
import { useQuery } from "@tanstack/react-query";
import { supabase } from "@/integrations/supabase/client";

export const useFilteredStudents = (coachId, packageType) => {
  return useQuery({
    queryKey: ['students', 'filtered', coachId, packageType],
    queryFn: async () => {
      let query = supabase
        .from('students')
        .select('*')
        .order('name');

      if (coachId && packageType) {
        query = query
          .eq('coach_id', coachId)
          .eq('package_type', packageType);
      } else if (coachId) {
        query = query.eq('coach_id', coachId);
      } else if (packageType) {
        query = query.eq('package_type', packageType);
      }
      
      const { data, error } = await query;
      
      if (error) {
        console.error('Error fetching filtered students:', error);
        throw error;
      }
      
      return data || [];
    },
    enabled: !!coachId || !!packageType,
  });
};
